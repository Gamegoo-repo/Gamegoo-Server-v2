<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <!-- base.xml default.xml ì— ì¡´ìž¬í•˜ëŠ” Log ë©”ì‹œì§€ì˜ Color ì„¤ì • -->
    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter"/>

    <!-- ì½˜ì†”ì— ì¶œë ¥ë˜ëŠ” ë¡œê·¸ íŒ¨í„´ -->
    <property name="CONSOLE_LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %clr(%5level) %cyan(%logger) - %msg%n"/>
    <!-- LogíŒŒì¼ì— ê¸°ë¡ë˜ëŠ” ë¡œê·¸ íŒ¨í„´ -->
    <property name="FILE_LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %5level %logger - %msg%n"/>
    <!-- ë””ìŠ¤ì½”ë“œ ì¶œë ¥ ë¡œê·¸ íŒ¨í„´ -->
    <property name="DISCORD_LOG_PATTERN" value="**ðŸš¨ Springboot Error Alert ðŸš¨** \n**Logger:** `%logger{36} - %msg` \n**Timestamp:** `%d{yyyy-MM-dd HH:mm:ss}` \n**Stack Trace** \n```%ex{short}```"/>

    <!-- ë¡œê·¸ íŒŒì¼ ì €ìž¥ ê²½ë¡œ -->
    <property name="LOG_PATH" value="/app/logs"/>
    <!-- ë””ìŠ¤ì½”ë“œ ì›¹í›… -->
    <springProperty name="DISCORD_WEBHOOK_URL" source="logging.discord.webhook"/>

    <!-- ì½˜ì†”ë¡œê·¸ Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- íŒŒì¼ INFO ë¡œê·¸ Appender -->
    <appender name="FILE_INFO" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
        <!-- ë¡œê·¸íŒŒì¼ì„ í¬ê¸°, ì‹œê°„ ê¸°ë°˜ìœ¼ë¡œ ê´€ë¦¬í•˜ê¸° ìœ„í•œ SizeAndTimeBasedRollingPolicy -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- ë¡œê·¸íŒŒì¼ëª… íŒ¨í„´ -->
            <!-- ë‚ ì§œë³„ë¡œ ê¸°ë¡, maxFileSizeë¥¼ ë„˜ê¸°ë©´ ì¸ë±ìŠ¤(i)ë¥¼ ì¦ê°€ì‹œì¼œ ìƒˆë¡œìš´ íŒŒì¼ë¡œ ì €ìž¥ -->
            <fileNamePattern>${LOG_PATH}/api.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <!-- ë¡œê·¸íŒŒì¼ ìµœëŒ€ì‚¬ì´ì¦ˆ -->
            <maxFileSize>10MB</maxFileSize>
            <!-- ìƒì„±í•œ ë¡œê·¸íŒŒì¼ ê´€ë¦¬ ì¼ìˆ˜ -->
            <maxHistory>7</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- íŒŒì¼ ERROR ë¡œê·¸ Appender -->
    <appender name="FILE_ERROR" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- error ì „ìš© íŒŒì¼ëª… íŒ¨í„´ -->
            <fileNamePattern>${LOG_PATH}/api.error.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>7</maxHistory>
        </rollingPolicy>

        <!-- ERROR ì´ìƒë§Œ ìˆ˜ìš©í•˜ëŠ” í•„í„° ì¶”ê°€ -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
    </appender>

    <!-- discord ERROR ë¡œê·¸ Appender -->
    <appender name="DISCORD" class="com.github.napstr.logback.DiscordAppender">
        <webhookUri>${DISCORD_WEBHOOK_URL}</webhookUri>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>${DISCORD_LOG_PATTERN}</pattern>
        </layout>
        <username>Logback</username>
        <tts>false</tts>
    </appender>

    <!-- ë¹„ë™ê¸° Discord Webhook Appender -->
    <appender name="ASYNC_DISCORD" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="DISCORD"/>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
    </appender>

    <!-- local Profileì—ì„œì˜ ë¡œê·¸ ì„¤ì • -->
    <springProfile name="local">
        <root level="INFO">
            <!-- CONSOLE ë¡œê·¸ë§Œ ë“±ë¡ -->
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>
    <!-- dev Profileì—ì„œì˜ ë¡œê·¸ ì„¤ì • -->
    <springProfile name="dev">
        <root level="INFO">
            <!-- CONSOLE, FILE_INFO, FILE_ERROR ë“±ë¡-->
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE_INFO"/>
            <appender-ref ref="FILE_ERROR"/>
            <appender-ref ref="ASYNC_DISCORD"/>
        </root>
    </springProfile>

</configuration>
